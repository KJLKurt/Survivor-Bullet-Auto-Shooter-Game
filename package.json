{
  "name": "survivors-bullet-hell",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "sync:sw": "cp service-worker.js public/service-worker.js",
    "dev": "npm run sync:sw && esbuild src/main.js --bundle --outfile=public/dist/bundle.js --servedir=public --sourcemap --watch",
    "build": "npm run sync:sw && esbuild src/main.js --bundle --minify --outfile=public/dist/bundle.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests --ext .js"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "eslint": "^8.57.1",
    "jsdom": "^24.1.3",
    "vitest": "^2.1.8"
  }
}
